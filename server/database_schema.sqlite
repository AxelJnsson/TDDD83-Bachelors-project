DROP TABLE IF EXISTS used_product;
DROP TABLE IF EXISTS new_product;
DROP TABLE IF EXISTS shopping_session;
DROP TABLE IF EXISTS cart_item;
DROP TABLE IF EXISTS cart__item;
--DROP TABLE IF EXISTS order_item;
